{
  "$schema": "https://www.rockjs.dev/schema/rock.config.json",
  "name": "MyRNFramework",
  "displayName": "My RN Framework",
  "version": "1.0.0",
  "description": "React Native framework for brownfield integration into native iOS and Android applications",
  
  "ios": {
    "bundleIdentifier": "com.myrnframework",
    "deploymentTarget": "13.4",
    "xcframeworkName": "MyRNFramework",
    "buildConfiguration": "Release",
    "jsBundleName": "main",
    "entryFile": "index.ts",
    "hermes": true,
    "newArchitecture": false,
    "codeSigning": {
      "enabled": false
    }
  },
  
  "android": {
    "packageName": "com.myrnframework",
    "minSdkVersion": 23,
    "targetSdkVersion": 34,
    "compileSdkVersion": 34,
    "aarName": "myrnframework",
    "jsBundleName": "index.android.bundle",
    "entryFile": "index.ts",
    "hermes": true,
    "newArchitecture": false
  },
  
  "build": {
    "outputDir": "./build",
    "cleanBeforeBuild": true
  },
  
  "metro": {
    "config": "./metro.config.js"
  }
}
