# Podfile for MyRNFramework
# React Native 0.78+ brownfield integration with Rock framework packaging support
#
# This Podfile is configured for:
# 1. Standard React Native development
# 2. XCFramework packaging via Rock CLI for distribution
# 3. Integration into existing native iOS applications

# Resolve react_native_pods.rb with node to allow for hoisting
# Note: We use File.join(__dir__, '..') because node_modules is in the parent directory
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', File.join(__dir__, '..')]).strip

# Minimum iOS 15.1 required for React Native 0.78+
platform :ios, '15.1'
prepare_react_native_project!

# Framework configuration for brownfield integration
# When packaging as XCFramework, use static linkage
linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'MyRNFramework' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # React Native Brownfield library for brownfield integration
  pod 'ReactBrownfield', :path => '../node_modules/@callstack/react-native-brownfield'

  post_install do |installer|
    # React Native post install configuration
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # Additional configuration for framework packaging
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Ensure minimum deployment target for RN 0.78+
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'

        # Enable modules for Swift interoperability
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
        config.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
        config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'

        # Framework packaging optimizations
        if ENV['BUILD_FRAMEWORK'] == '1'
          config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
          config.build_settings['SKIP_INSTALL'] = 'NO'
        end
      end
    end
  end
end

# Framework target for XCFramework packaging (used by Rock CLI)
# Uncomment when packaging as a distributable framework
# target 'MyRNFrameworkLib' do
#   use_frameworks! :linkage => :static
#   # Include same dependencies as main target
# end
